{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}
{% block title_page %}Liste des destinations{% endblock %}

{% block body %}

    {% for article in articles %}
        <div class="card mb-3">
            <div class="card-header">
                {{ article.auteur }}
            </div>
            <div class="card-body">
                <h5 class="card-title">{{ article.nom }}</h5>
                <p class="card-text">{{ article.description | u.truncate(250, '...', false) }}</p>
                <a href="#" class="btn btn-primary">En voir plus</a>
                <a href="#" class="btn btn-outline-primary">J'ai visit√©</a>
            </div>
        </div>
    {% endfor %}

{% endblock %}
